#include <unistd.h>
#include "main.h"

/**
 * power - calculates the power of a number
 * @base: The base
 * @exp: The exponent
 *
 * Return: The result of base raised to the power of exp
 */
int power(int base, int exp)
{
    int result = 1;
    while (exp > 0)
    {
        result *= base;
        exp--;
    }
    return result;
}